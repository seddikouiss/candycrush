<?xml version="1.0"?>
<project name="java-junit-template-project" default="test" basedir=".">
	<property name="src.dir" value="src/"/>
	<property name="build.dir" value="build/"/>
	
	<path id="JUnit">
		<pathelement location="implementation/JUnit/junit-4.11.jar"/>
		<pathelement location="implementation/JUnit/hamcrest-core-1.3.jar"/>
	</path>
	
	<target name="test" depends="run, clean"/>
	
	<target name="build">
		<mkdir dir="${build.dir}"/>
		<javac srcdir="${implementation.dir}" destdir="${build.dir}" includeantruntime="false">
			<classpath refid="JUnit"/>
		</javac>
		<echo message="Build done" />
	</target>

	<target name="run" depends="build">
		<junit printsummary="on" haltonfailure="yes">
			<classpath>
				<path refid="JUnit"/>
				<pathelement location="${build.dir}"/>
			</classpath>
			<batchtest>
				<fileset dir="${implementation.dir}" includes="src/modele/test/*.java"/>
			</batchtest>
		</junit>
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}"/>
		<echo message="clean done" />
	</target>
</project>
